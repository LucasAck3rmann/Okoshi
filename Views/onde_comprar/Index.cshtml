@section metatags{
    <title>Onde Encontrar - Okoshi</title>
    <meta name='keywords' content='' />
    <meta name='description' content='' />
}

<div class="page-header product-category-01">
    <div class="grid">
        <h1 class="title">
            <strong>Encontre Okoshi pertinho de você</strong>
        </h1>
    </div>

    <ul class="submenu">
        @foreach (var item in new RepositorioEF.CategoriaRepositorioEF().ListarTodos())
        {
            <li>
                <a href="/@item.SEUrl" title="@item.Nome">
                    <span class="ico"></span>
                    <span class="text">
                        @item.Nome
                    </span>
                </a>
            </li>
        }
    </ul>
</div>

<div class="inner-page how-to-find">
    <div class="content">
        <h2 class="title">
            Pesquise abaixo de acordo com a sua localização e descubra<br />
            onde encontrar Okoshi na loja mais próxima de você.
        </h2>
    </div>
    <iframe src="https://munddi.com/Okoshi?e=1&logo=1" width="100%" height="500px" allow="geolocation *;"></iframe>

    <div class="virtual-store">
        <div class="content">
            <h3 class="title">
                Okoshi é leve para a vida.
            </h3>

            <a href="https://loja.okoshi.com.br/" target="_blank" class="button" title="Acesse nossa Loja Virtual">
                Acesse nossa Loja Virtual
            </a>
        </div>
    </div>
</div>